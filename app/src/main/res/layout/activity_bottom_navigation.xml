<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:focusableInTouchMode="true">


        <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Hello there,"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="please complete your profile, before we get started."
            app:layout_constraintStart_toStartOf="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <TextView
            android:id="@+id/textView25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:text="PERSONAL PICTURE"
            android:background="#009688"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView25"
            app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
            android:id="@+id/textView27"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#009688"
            android:hapticFeedbackEnabled="false"
            android:padding="16dp"
            android:text="PERSONAL INFORMATION"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Name"
            app:layout_constraintStart_toStartOf="@+id/textView24"
            app:layout_constraintTop_toBottomOf="@+id/textView27" />

    <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_stroke_corner_6r_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView29">

        <ImageView
                android:id="@+id/nameEditImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/ic_pencil_edit_button" />

        <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/nameEditImageView"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="Name"
                android:inputType="textEmailAddress"
                android:maxLines="1" />
    </RelativeLayout>

    <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Email"
            app:layout_constraintStart_toStartOf="@+id/relativeLayout2"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

    <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_stroke_corner_6r_gray"
            app:layout_constraintEnd_toEndOf="@+id/relativeLayout2"
            app:layout_constraintStart_toStartOf="@+id/relativeLayout2"
            app:layout_constraintTop_toBottomOf="@+id/textView30">

        <ImageView
                android:id="@+id/emailEditImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/ic_pencil_edit_button" />

        <EditText
                android:id="@+id/emailIdEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/emailEditImageView"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="Email Id"
                android:inputType="textEmailAddress"
                android:maxLines="1" />
    </RelativeLayout>

    <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Mobile"
            app:layout_constraintStart_toStartOf="@+id/relativeLayout3"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout3" />

    <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_stroke_corner_6r_gray"
            app:layout_constraintEnd_toEndOf="@+id/relativeLayout2"
            app:layout_constraintStart_toStartOf="@+id/relativeLayout2"
            app:layout_constraintTop_toBottomOf="@+id/textView31">

        <ImageView
                android:id="@+id/mobileEditImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/ic_pencil_edit_button" />

        <EditText
                android:id="@+id/mobileEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/mobileEditImageView"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="Mobile"
                android:inputType="textEmailAddress"
                android:maxLines="1" />
    </RelativeLayout>

    <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Date of Birth"
            app:layout_constraintStart_toStartOf="@+id/relativeLayout4"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout4" />

    <RelativeLayout
            android:id="@+id/relativeLayout5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_stroke_corner_6r_gray"
            app:layout_constraintEnd_toEndOf="@+id/relativeLayout3"
            app:layout_constraintStart_toStartOf="@+id/relativeLayout3"
            app:layout_constraintTop_toBottomOf="@+id/textView32">

        <ImageView
                android:id="@+id/dobEditImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/ic_pencil_edit_button" />

        <EditText
                android:id="@+id/dobEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/dobEditImageView"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="Date of Birth"
                android:inputType="textEmailAddress"
                android:maxLines="1" />
    </RelativeLayout>

    <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Height"
            app:layout_constraintStart_toStartOf="@+id/relativeLayout5"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout5" />

    <RelativeLayout
            android:id="@+id/relativeLayout6"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_stroke_corner_6r_gray"
            app:layout_constraintEnd_toEndOf="@+id/relativeLayout4"
            app:layout_constraintStart_toStartOf="@+id/relativeLayout4"
            app:layout_constraintTop_toBottomOf="@+id/textView33">

        <ImageView
                android:id="@+id/heightEditImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/ic_pencil_edit_button" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/heightEditImageView"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:text="in cm"
                android:textStyle="bold"/>

        <EditText
                android:id="@+id/heightEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/heightEditImageView"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="Height"
                android:inputType="textEmailAddress"
                android:maxLines="1" />
    </RelativeLayout>

    <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Weight"
            app:layout_constraintStart_toStartOf="@+id/relativeLayout6"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout6" />

    <RelativeLayout
            android:id="@+id/relativeLayout7"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_stroke_corner_6r_gray"
            app:layout_constraintEnd_toEndOf="@+id/relativeLayout5"
            app:layout_constraintStart_toStartOf="@+id/relativeLayout5"
            app:layout_constraintTop_toBottomOf="@+id/textView34">

        <ImageView
                android:id="@+id/weightEditImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/ic_pencil_edit_button" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/weightEditImageView"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:text="in kg"
                android:textStyle="bold"/>

        <EditText
                android:id="@+id/weightEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/weightEditImageView"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="Weight"
                android:inputType="numberDecimal"
                android:maxLines="1" />
    </RelativeLayout>

    <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="City"
            app:layout_constraintStart_toStartOf="@+id/relativeLayout7"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout7" />

    <RelativeLayout
            android:id="@+id/relativeLayout8"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_stroke_corner_6r_gray"
            app:layout_constraintEnd_toEndOf="@+id/relativeLayout6"
            app:layout_constraintStart_toStartOf="@+id/relativeLayout6"
            app:layout_constraintTop_toBottomOf="@+id/textView35">

        <ImageView
                android:id="@+id/cityEditImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/ic_pencil_edit_button" />

        <EditText
                android:id="@+id/cityEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/cityEditImageView"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="City"
                android:inputType="textCapWords"
                android:maxLines="1" />
    </RelativeLayout>

        <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Food Options"
                app:layout_constraintStart_toStartOf="@+id/relativeLayout8"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout8" />

        <RelativeLayout
                android:id="@+id/relativeLayout9"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_stroke_corner_6r_gray"
                app:layout_constraintEnd_toEndOf="@+id/relativeLayout7"
                app:layout_constraintStart_toStartOf="@+id/relativeLayout7"
                app:layout_constraintTop_toBottomOf="@+id/textView36">

            <ImageView
                    android:id="@+id/foodOptionEditImageView"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@drawable/ic_pencil_edit_button" />

            <TextView
                    android:id="@+id/foodOptionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="0dp"
                    android:layout_toStartOf="@+id/foodOptionEditImageView"
                    android:background="@android:color/transparent"
                    android:textSize="16sp"
                    android:hint="Food Options"
                    android:maxLines="1" />
        </RelativeLayout>

    <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:background="@drawable/bg_stroke_corner_6r_gray"
            app:layout_constraintEnd_toEndOf="@+id/relativeLayout9"
            app:layout_constraintStart_toStartOf="@+id/relativeLayout9"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout9"/>

    <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Weight Management (weight loss)"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/linearLayout3"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <TextView
            android:id="@+id/textView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Other health concerns"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/textView37"
            app:layout_constraintTop_toBottomOf="@+id/textView37" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
            app:layout_constraintStart_toStartOf="@+id/linearLayout3"
            app:layout_constraintTop_toBottomOf="@+id/textView38" />

    <TextView
            android:id="@+id/textView39"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="Save and Continue"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_round_corner_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/recyclerView2"
            app:layout_constraintStart_toStartOf="@+id/recyclerView2"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView2" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>